{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Meson Build",
            "type": "shell",
            "command": "meson",
            "args": ["compile", "-C", "builddir"],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": "$meson-gcc",
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
        }
    ]
}